<?xml version="1.0"?>

<launch>
  <!--choose planner-->
  <arg name="choose_global" default='2'/>
  <arg name="choose_local" default='2'/>

  <!--move_base parameters-->
  <arg name="controller_frequency" default="10.0"/><!--4-->

  <!-- global planner --><!-- navfn/NavfnROS or carrot_planner/CarrotPlanner -->
  <arg name="base_global_planner" default="carrot_planner/CarrotPlanner" if="$(eval choose_global == 1)">
    <arg name="carrot_step_size" default="0.05"/>
    <arg name="carrot_min_dist_from_robot" default="0.50"/>
    <param name="step_size" value="$(arg carrot_step_size)"/>
    <param name="min_dist_from_robot" value="$(arg carrot_min_dist_from_robot)"/>
  </arg>
  <arg name="base_global_planner" default="navfn/NavfnROS" if="$(eval choose_local == 2)"/>

  <!-- local planner --><!--base, dwa, teb-->
  <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS" if="$(eval choose_local == 1)"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS" if="$(eval choose_local == 2)"/>
  <arg name="base_local_planner" default="teb_local_planner/TebLocalPlannerROS" if="$(eval choose_local == 3)"/>

  <!-- main : move_base node-->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="/ironfish_diff_drive_controller/cmd_vel"/>
    <remap from="odom" to="/ironfish_diff_drive_controller/odom"/>
    <!--decise planner-->
    <param name="controller_frequency" value="$(arg controller_frequency)"/>
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>
    <!--costmap and planner-->
    <rosparam file="$(find ironfish_navigation)/param/sim/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ironfish_navigation)/param/sim/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ironfish_navigation)/param/sim/local_costmap.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find ironfish_navigation)/param/sim/global_costmap.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find ironfish_navigation)/param/sim/base_local_planner.yaml" command="load" />
  </node>
</launch>
